<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider"
                  xsi:type="string">msp_twofactorauth_edit_user_form.msp_twofactorauth_edit_user_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">2FA</item>
        <item name="acl" xsi:type="string">MSP_TwoFactorAuth::tfa</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="childrenFromMeta" xsi:type="boolean">true</item>
    </argument>
    <settings>
        <namespace>msp_twofactorauth_edit_user_form</namespace>
        <dataScope>data</dataScope>
        <deps>msp_twofactorauth_edit_user_form.msp_twofactorauth_edit_user_form_data_source</deps>
    </settings>

    <dataSource name="msp_twofactorauth_edit_user_form_data_source">
        <aclResource>MSP_TwoFactorAuth::tfa</aclResource>
        <dataProvider class="MSP\TwoFactorAuth\Ui\Component\Form\User\DataProvider" name="msp_twofactorauth_edit_user_form_data_source">
            <settings>
                <primaryFieldName>main_table.user_id</primaryFieldName>
                <requestFieldName>user_id</requestFieldName>
            </settings>
        </dataProvider>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">MSP_TwoFactorAuth/js/form/provider</item>
            </item>
        </argument>
    </dataSource>

    <fieldset name="base_fieldset">
        <settings>
            <label translate="true">2FA</label>
        </settings>

        <field name="msp_tfa_providers" formElement="input" component="MSP_TwoFactorAuth/js/form/element/providers">
            <settings>
                <template>ui/form/field</template>
                <elementTmpl>MSP_TwoFactorAuth/form/element/providers</elementTmpl>
                <label>Providers selection</label>
                <visible>true</visible>
                <dataType>text</dataType>
                <source>msp_twofactorauth_edit_user_form_data_source</source>
                <dataScope>msp_tfa_providers</dataScope>
            </settings>
        </field>
    </fieldset>
    <fieldset name="reset_fieldset">
        <settings>
            <label>Configuration reset</label>
        </settings>

        <field name="msp_tfa_reset_providers" formElement="input"
               component="MSP_TwoFactorAuth/js/form/element/reset_providers">
            <settings>
                <template>ui/form/field</template>
                <elementTmpl>MSP_TwoFactorAuth/form/element/reset_providers</elementTmpl>
                <label>Reset Providers</label>
                <visible>true</visible>
                <dataType>text</dataType>
                <source/>
            </settings>
        </field>
    </fieldset>
    <fieldset name="trusted_fieldset">
        <settings>
            <label translate="true">Trusted devices</label>
        </settings>
        <field name="msp_tfa_reset_providers" formElement="input"
               component="MSP_TwoFactorAuth/js/form/element/trusted_devices">
            <settings>
                <template>ui/form/field</template>
                <elementTmpl>MSP_TwoFactorAuth/form/element/trusted_devices</elementTmpl>
                <label>Trusted devices</label>
                <visible>true</visible>
                <dataType>text</dataType>
                <source>msp_twofactorauth_edit_user_form_data_source</source>
            </settings>
        </field>
    </fieldset>
</form>
